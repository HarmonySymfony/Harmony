<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-0 shadow-lg p-4 rounded" style="background-color: #f9f9f9;">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4" style="color: #000; font-family: 'Arial', sans-serif; font-size: 2.5em;">Commentaire</h2>

                    {% if form_errors(form) %}
                        <div class="alert alert-danger" role="alert">
                            {{ form_errors(form) }}
                        </div>
                    {% endif %}

                    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="mb-3">
                        {{ form_label(form.contenu, 'contenu', {'label_attr': {'class': 'form-label', 'style': 'color: #000;'}}) }}
                        {{ form_widget(form.contenu, {'attr': {'class': 'form-control'}}) }}
                        {% if form_errors(form.contenu) %}
                            <div class="alert alert-danger" role="alert">
                                {{ form_errors(form.contenu) }}
                            </div>
                        {% endif %}
                    </div>



                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg" style="background-color: #4a90e2;">submit</button>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>

