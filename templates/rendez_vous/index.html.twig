{% extends 'base.backoffice.html.twig' %}

{% block body %}
    <h1>Rendez-Vous liste</h1>

    <table class="table table-sm">
        <thead class="table-secondary">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Prenom</th>
            <th>Date</th>
            <th>Email</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for rendez_vou in rendez_vouses %}
            <tr>
                <td>{{ rendez_vou.id }}</td>
                <td>{{ rendez_vou.nom }}</td>
                <td>{{ rendez_vou.prenom }}</td>
                <td>{{ rendez_vou.date }}</td>
                <td>{{ rendez_vou.email }}</td>
                <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                    <a href="{{ path('app_rendez_vous_show', {'id': rendez_vou.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-users-viewfinder"></i></a>
                    <a href="{{ path('app_rendez_vous_edit', {'id': rendez_vou.id}) }}" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i></a>
                        {{ include('rendez_vous/_delete_form.html.twig') }}
                    </div>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rendez_vous_new') }}" class="btn btn-primary btn-sm"><i class="fa fa-newspaper"></i> Create new</a>
{% endblock %}
