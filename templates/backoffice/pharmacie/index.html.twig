{% extends 'base.backoffice.html.twig' %}

{% block body %}

   
      
        <div style="padding-left: 200px; padding-top: 200px" class="container">
        <h1>Pharmacie List</h1>
<input id="search-input" type="form-control" placeholder="Search...">
<title>AJAX Search Example</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $("#search-input").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Address</th>
                        <th>Type</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for pharmacie in pharmacies %}
                        <tr>
                            <td>{{ pharmacie.id }}</td>
                            <td>{{ pharmacie.idU }}</td>
                            <td>{{ pharmacie.nom }}</td>
                            <td>{{ pharmacie.adress }}</td>
                            <td>{{ pharmacie.type }}</td>
                            <td>
                                <a href="{{ path('app_pharmacie_edit_backoffice', {'id': pharmacie.id}) }}"class="btn btn-success">Edit</a>
                                <a href="{{ path('app_pharmacie_show_backoffice', {'id': pharmacie.id}) }}"class="btn btn-primary">Show</a>
                                <a href="{{ path('app_medicament_index_backoffice', {'id': pharmacie.id}) }}"class="btn btn-warning">Medicament</a>

                                
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
                                <a href="{{ path('app_pharmacie_new_backoffice') }}" class="btn btn-info">Create new</a>


    </div>
{% endblock %}
